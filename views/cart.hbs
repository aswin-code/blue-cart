<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-conten padding-y bg">

    <div class="container">
        <div class="row">
            <aside class="col-md-3">
                <!--   SIDEBAR   -->
                <ul class="list-group">
                    <a class="list-group-item " href="/users/{{user._id}}">Store</a>
                    <a class="list-group-item active" href="#">View Products</a>
                </ul>
                <br>
                <!--   SIDEBAR .//END   -->
            </aside>
            <main class="col-md-9">
                <article class="card">
                    <header class="card-header">
                        <strong class="d-inline-block mr-3">All Products</strong>
                    </header>
                    <div class="card-body">
                        <div class="row">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    {{#each user.cart}}
                                    <tr>
                                        <td width="65">
                                            <img src="/images/items/{{this.image}}" class="img-xs border">
                                        </td>
                                        <td>
                                            <p class="title mb-0">{{this.productName}}</p>
                                            <var class="price text-muted">RS {{this.price}}</var>
                                        </td>
                                        <td> Seller <br>{{this.brandName}}</td>
                                        <td width="250"> <a onclick="RemoveCartItem('{{this._id}}')"
                                                class="btn btn-outline-danger">Remove</a> <a
                                                href="/users/{{../user._id}}/products/{{this._id}}"
                                                class="btn btn-light">
                                                Details
                                            </a>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </table>
                            </div>

                        </div> <!-- row.// -->
                    </div> <!-- card-body .// -->
                    <!-- table-responsive .end// -->
                </article> <!-- order-group.// -->

            </main>
            <div class="row">
                <div class="col-12">


                </div>
            </div>
        </div> <!-- row.// -->

    </div>


</section>
<!-- ========================= SECTION CONTENT END// ========================= -->
<script>
    const RemoveCartItem = async (value) => {
        try {
            const url = window.location.href;
            const res = await axios.patch(`${url}`, {
                value
            }).then(e => {
                alert("Item Removed ")
                window.location.reload();
            })

        } catch (err) {

        }


    }
</script>