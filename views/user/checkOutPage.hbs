            $('.apply-coupon').on('click', async function () {
                const code = $(this).prev().val()

                await axios.post('/users/coupons', { code }).then(e => {
                    if (e.data.failed) {
                        alert(e.data.failed)
                    } else {
                        $('.coupon-discount').text("- " + "₹ " + e.data.coupon.couponDiscount)
                        $('.coupon-name').text("Coupon:")
                        $('.coupontotal').addClass('bor12')
                        let subtotal = $('.subtotal').text().split('₹')[1] * 1 - e.data.coupon.couponDiscount
                        $('.subtotal').text("₹ " + subtotal)
                    }
                })
            })



            //////////////===================== PLACE ORDER ==========================//////////////

            $('.place-order').on('click', async function () {
                const addressid = $('.shipping-address').val()
                const code = $('.apply-coupon').prev().val()
                const stripe = Stripe('pk_test_51LVugISGF4nE7vqYqF4H2aV4gVKFmT3aIrATGwqMCw39fmQGnx76Ui9Fhc40NnNwX7ShRVIIISfkS2CWO0jwj5Mm001srHBwTK')

                const pay = async orderId => {
                    try {

                        await axios.get(`${orderId}`).then(e => {
                            console.log(e)
                            stripe.redirectToCheckout({
                                sessionId: e.data.session.id
                            });

                        })

                    } catch (err) {
                        console.log(err)
                    }
                }


                if ($('.shipping-address').val() == 'Choose an option') {
                    swal("Comfirm!", "Please Select Your Address!", "warning");
                } else if ($('.payment-method').val() == 'Choose an option') {
                    swal("Comfirm!", "Please Select A Payment Option!", "warning");
                } else if ($('.payment-method').val() == 'Online Payment') {
                    axios.post(' ', {
                        addressid,
                        code

                    }).then(e => {
                        console.log(e.data)
                        pay(e.data.url)
                    })
                } else if ($('.payment-method').val() == 'Cash On Delivery')
                    axios.patch(' ', {
                        addressid,
                        code

                    }).then(e => {
                        window.location.assign(e.data.url)
                    })
            })
        })



        $('#address-form').on('submit', async function () {
