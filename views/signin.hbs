<script>
    const login = async (email, password) => {
        try {

            const res = await axios({
                method: "POST",
                url: "/signin",
                data: {
                    email,
                    password
                }
            })
            console.log(res.data)
            if (res.data.status == "failed") {
                document.getElementById('check').innerText = res.data.data.message
            } else if (res.data.status == "blocked") {
                alert(res.data.message)
            } else {
                window.location.assign(res.request.responseURL)

            }
        }
        catch (err) {
            console.log(err.response)

        }


    }
    document.querySelector('#form').addEventListener('submit', e => {
        console.log("worked")
        e.preventDefault();
        const email = document.getElementById('email').value;
        const password = document.getElementById('password').value;
        if (email && password) {

            login(email, password)
        } else {
            document.getElementById('check').innerText = "please enter your email and password"
        }

    })

</script>

