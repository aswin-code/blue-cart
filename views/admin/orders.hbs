<div class="main--content">

    <div class="recent--patients table-content">
        <div class="title">
            <h2 class="section--title">All Orders</h2>

        </div>
        <div class="table">
            <table id="orders-table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Total Bill</th>
                        <th>Paid</th>
                        <th>Status</th>
                        <th>Settings</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                    <tr>
                        <td><a href='/admin/orders/{{this._id}}'>{{this._id}}</a></td>

                        <td>{{this.totalBill}}</td>
                        {{#if this.paid}}
                        <td>Paid</td>
                        {{else}}
                        <td>UnPaid</td>
                        {{/if}}
                        <td>{{this.status}}</td>
                        <td><span><a href="/admin/orders/{{this._id}}"><i class="ri-edit-line edit"></i></a></span>
                        </td>

                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

</div>
<script>
    $(document).ready(function () {

        $('#orders-table').DataTable();

    });
</script>