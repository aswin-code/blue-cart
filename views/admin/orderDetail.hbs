<div class="main--content d-flex justify-conten-center align-items-center ">
    <div class="row w-100">
        <div class="col-8 d-flex justify-content-between g-2">
            {{#each order.order}}
            <div class="card mb-3" style="max-width: 500px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="/images/items/{{this.product.image}}" class="img-fluid rounded-start h-100" alt="">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h4 class="card-title text-muted">{{this.product.brandName}}</h4>
                            <h5 class="card-title  pb-4 ">{{this.product.productName}}</h5>
                            <p class="card-text">Quantity : {{this.qty}}</p>
                            <p class="card-text">Total : {{this.total}}</p>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <div class="col-4">
            <div class="card" style="width:100%;">
                <div class="card-body">
                    <h5 class="card-title pb-4">Order Summary</h5>
                    <div class="row">

                        <table>
                            <thead>
                                <th></th>
                                <th></th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Total :</td>
                                    <td>{{total}}</td>
                                </tr>
                                <tr>
                                    <td>Shipping :</td>
                                    <td>+ 50</td>
                                </tr>
                                <tr>

                                    <td>Discount :</td>
                                    <td> - {{order.discount}}</td>
                                </tr>

                                <tr>
                                    <td>Total Bill :</td>
                                    <td>{{order.totalBill}}</td>
                                </tr>
                                <tr>
                                    <td>Payement :</td>
                                    <td>{{order.paymentType}}</td>
                                </tr>
                                <tr>
                                    <td>Paid :</td>
                                    {{#if order.paid}}
                                    <td class="text-success">Paid</td>
                                    {{else}}
                                    <td class="text-danger">UnPaid</td>
                                    {{/if}}
                                </tr>
                                <tr>
                                    <td>status :</td>
                                    <td>{{order.status}}</td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="dropdown show">
                                            <a class="btn btn-secondary dropdown-toggle" href="#" role="button"
                                                id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true"
                                                aria-expanded="false">
                                                {{order.status}}
                                            </a>

                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                                <button class="dropdown-item order " value="confirmed">Confirm</button>
                                                <button class="dropdown-item order" value="out of delivery">Out Of
                                                    Delivery</button>
                                                <button class="dropdown-item order" value="delivered">Delivered</button>
                                            </div>
                                        </div>
                                    </td>
                                    <td><button class="btn btn-danger order" value="cancel">Cancel</button></td>
                                </tr>

                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('.order').click(function () {
            axios.patch('', {
                status: $(this).attr('value')
            }).then(e => {
                window.location.reload()
            })
        })
    })
</script>