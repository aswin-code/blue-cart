<div class="main--content">
    <div class="card my-3" style="max-width: 75 vw; width=100% ;min-height:75vh; ">
        <div class="row g-0 ">
            <div class="col-md-4 ">
                <img src="/images/items/{{product.image}}" class="img-fluid rounded-start" alt="">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <div class="col-12 col-12 col-md-12">
                        <form action="" method="post" class="tm-edit-product-form">
                            <div class="form-group mb-3">
                                <label for="name">Product Name
                                </label>
                                <input id="productName" name="productName" type="text" value="{{product.productName}}"
                                    class="form-control validate" />
                            </div>
                            <div class="form-group mb-3">
                                <label for="name">Brand Name
                                </label>
                                <input id="brandName" name="brandName" type="text" value="{{product.brandName}}"
                                    class="form-control validate" />
                            </div>
                            <div class="row">
                                <div class="form-group mb-3 col-xs-12 col-sm-6">
                                    <label for="expire_date">Price
                                    </label>
                                    <input id="price" name="price" type="text" value="{{product.price}}"
                                        class="form-control validate" data-large-mode="true" />
                                </div>
                                <div class="form-group mb-3 col-xs-12 col-sm-6">
                                    <label for="stock">Discount Price
                                    </label>
                                    <input id="discountPrice" name="discountPrice" type="text"
                                        value="{{product.discountPrice}}" class="form-control validate" />
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <label for="description">Description</label>
                                <textarea class="form-control validate tm-small" rows="5" id="description"
                                    required>{{product.description}}</textarea>
                            </div>
                            <div class="form-group mb-3">
                                <label for="category">Category</label>
                                <select class="custom-select tm-select-accounts" id="category">
                                    <option value="{{product.category._id}}" selected>{{product.category.name}}</option>
                                    {{#each category}}
                                    <option value="{{this._id}}">{{this.name}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="row">
                                <div class="form-group mb-3 col-xs-12 col-sm-6">
                                    <label for="expire_date">size
                                    </label>
                                    <input id="size" name="size" type="text" value="{{product.size}}"
                                        class="form-control validate" data-large-mode="true" />
                                </div>
                                <div class="form-group mb-3 col-xs-12 col-sm-6">
                                    <label for="stock">Units In Stock
                                    </label>
                                    <input id="stock" name="stock" type="text" value="{{product.stock}}"
                                        class="form-control validate" />
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <button type="submit" class="btn btn-primary btn-block">Update Now</button>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>